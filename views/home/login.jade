extends ../layout

block append content
    .container-fluid
        .row-fluid
            .centering.text-center
                #logincontainer.col-sm-6.col-md-4.col-md-offset-4
                    h1.text-center.login-title Sign in to continue to Bootsnipp
                    .account-wall
                        img.profile-img(src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120', alt='')
                        form#loginform.form-signin
                            input.form-control(type='text', placeholder='Email', name='email', required='required', autofocus='autofocus')
                            input.form-control(type='password', placeholder='Password', name='password', required='required')
                            button.btn.btn-lg.btn-primary.btn-block(data-role="submit", data-form="#loginform", data-target="/login", data-container="#logincontainer")
                                | Sign in
                            label.checkbox.pull-left
                                input(type='checkbox', value='remember-me')
                                | Remember me
                            a.pull-right.need-help(href='#') Need help?
                            span.clearfix
                    a.text-center.new-account(href='#', data-toggle='modal', data-target='#modalRegister') Create an account
        //
           /.container
        //
                 Modal Register
        #modalRegister.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalRegisterLabel', aria-hidden='true')
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
                        h4#modalRegisterLabel.modal-title Create new account
                    .modal-body
                        form#registerForm.form.form-signup(role='form')
                            .form-group
                                .input-group
                                    span.input-group-addon
                                        span.glyphicon.glyphicon-envelope
                                    input.form-control(type='text', name='email', placeholder='Email Address')
                            .form-group
                                .input-group
                                    span.input-group-addon
                                        span.glyphicon.glyphicon-lock
                                    input.form-control(type='password', name='password', placeholder='Password')
                            .modal-footer
                                button.btn.btn-default(type='button', data-dismiss='modal') Close
                                button.btn.btn-default(data-role="submit", data-form="#registerForm", data-target="/signup", data-container="#modalRegister") Signup